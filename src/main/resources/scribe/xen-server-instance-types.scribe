resource "option-type" "instanceType-xen-template" {
  code             = "instanceType.xen.template"
  type             = "select"
  name             = "Template"
  category         = "instanceType.xen"
  fieldName        = "imageId"
  optionSource     = "xenVirtualImages"
  fieldCode        = "gomorpheus.optiontype.Image"
  fieldLabel       = "Image"
  fieldContext     = "config"
  fieldGroup       = "Options"
  required         = true
  enabled          = true
  editable         = false
  global           = false
